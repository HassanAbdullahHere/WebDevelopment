<%- include('layout/header') -%>

<div class="row products">
  <% products.forEach(function(p){ %>
    <div class="col-xs-12 col-md-4">
      <div class="card product-card shadow-sm my-3">
        <a href="/products/<%= p.category %>/<%= p.slug %>" class="pa">
          <img class="pimage card-img-top" src="/product_images/<%= p.id %>/<%= p.image %>" alt="<%= p.title %>">
        </a>
        <div class="card-body">
          <h5 class="card-title product-title"><%= p.title %></h5>
          <h6 class="card-subtitle mb-2 text-muted product-price">$<%= parseFloat(p.price).toFixed(2) %></h6>
          <a href="/products/<%= p.category %>/<%= p.slug %>" class="btn btn-primary vd">View Data</a>
        </div>
      </div>
    </div>
  <% }) %>  
</div>

<%- include('layout/footer'); -%>
